extends menuLayout

block content
    #content(data-role="content")
        label(for="searchMinRatingRating") Min Rating
        input#searchMinRatingRating(type="range", min="1", max="10", step="0.1", data-highlight="true", value="1")
        button#searchMinRatingSubmit Search

block additionalPages
    #results(data-role="page")
        #resultsHeader(data-role="header")
            h1 Search By Rating results
        #resultsContent(data-role="content")
            #innerResults(data-role="controlgroup")