extends menuLayout

block content
    #content(data-role="content")
        label(for="notificationCreateId") To user
        input#notificationCreateId(type="text", disabled="disabled", value=data.id)
        label(for="notificationCreateAmount") Amount
        input#notificationCreateAmount(type="number")
        label(for="notificationCreateRate") Rate
        input#notificationCreateRate(type="number")
        label(for="notificationCreateType") Type
        select#notificationCreateType(data-role="slider")
            if (data && data.type == "buy")
                option(value="buy", selected="selected") Buy
            else
                option(value="buy") Buy
            if (data && data.type == "sell")
                option(value="sell", selected="selected") Sell
            else
                option(value="sell") Sell
        
        #notificationCreateError
        button#notificationCreateSubmit Create
        a#notificationCreateCancel(data-rel="back", data-role="button") Cancel